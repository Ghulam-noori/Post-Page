<!DOCTYPE html>
<html lang="en">
	<head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />

        <title> Timeline</title>
		<link rel="stylesheet" href="../public/style.css">
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    </head>
	<body>
		<%-include('header') -%>
		<div id="container">
			<div class="text-field">
				<form id="form" action="/" method="post">
					<div class="message">
						<label for="message">Post a message</label><br>
						<textarea
						class="form-control" placeholder
							id="message"
							name="message"
							rows="3"
							minlength="25"
						></textarea>
					</div>
					<button type="submit" class="btn btn-success">Post a message</button>
				</form>
			</div>
	
				<div class="message-field">
					<% if (posts.length > 0) { %>
					<div>
						<% let i=0 %>
						<% posts.forEach(post => { %>
							<% i++ %>
					<div class="posted-text">
						<p id="date-stamps"><%= Date().slice(0,21) %></p>
						<p id="main-text"><%= post.message %></p>
					</div>
						<% }) %> <% } else { %> There are no message to display... <% } %>
					</div>
				</div>
			
		</div>
		
		
	</body>
</html>
